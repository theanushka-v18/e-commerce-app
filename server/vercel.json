{
    "version": 2,
    "name": "e-commerce-app",
    "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "client/build/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server.js" },
      { "src": "/(.*)", "dest": "/client/build/$1" }
    ]
  }